# Solana RPC Configuration
# Server-side only (not exposed to browser)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
# Public placeholder (browser uses /api/rpc proxy with full URL)
NEXT_PUBLIC_SOLANA_RPC_URL=http://localhost:3000/api/rpc
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# WalletConnect Project ID - Get from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Helius LaserStream Configuration
LASERSTREAM=https://laserstream-mainnet-ewr.helius-rpc.com
LASERSTREAM_API_KEY=your_helius_api_key
NEXT_PUBLIC_LASERSTREAM=https://laserstream-mainnet-ewr.helius-rpc.com
NEXT_PUBLIC_RPC_HTTP_URL=/api/rpc-http

# Site URL for API calls
NEXT_PUBLIC_SITE_URL=http://localhost:3000/

# Treasury Wallet Configuration
TREASURY_WALLET=your_treasury_wallet_public_key
TREASURY_PRIVATE_KEY=your_treasury_wallet_private_key_base58

# RIFTS Program IDs
NEXT_PUBLIC_RIFTS_PROGRAM_ID=your_rifts_program_id
NEXT_PUBLIC_RIFTS_V1_PROGRAM_ID=your_rifts_v1_program_id
NEXT_PUBLIC_GOVERNANCE_PROGRAM_ID=your_governance_program_id
NEXT_PUBLIC_FEE_COLLECTOR_PROGRAM_ID=your_fee_collector_program_id
NEXT_PUBLIC_LP_STAKING_PROGRAM_ID=your_lp_staking_program_id

# RIFTS Token Mint Address
NEXT_PUBLIC_RIFTS_TOKEN_MINT=your_rifts_token_mint_address

# Protocol Authority (deployer wallet)
NEXT_PUBLIC_PROTOCOL_AUTHORITY=your_protocol_authority_public_key

# Supabase Configuration - Get from https://supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Security - Admin Authentication (generate with: openssl rand -hex 32)
RIFTS_ADMIN_TOKEN=your_admin_token_hex_64_chars
RIFTS_REFRESH_TOKEN=your_refresh_token_hex_64_chars

# Rate Limiting - Upstash Redis (optional - falls back to memory if not set)
# Get from https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Jupiter Ultra API - Server-side only (DO NOT add NEXT_PUBLIC_ prefix)
# Get your API key from: https://portal.jup.ag
JUPITER_ULTRA_API_KEY=your_jupiter_ultra_api_key

# Jupiter - Allowed Token Mints (comma-separated)
# Default: SOL, USDC, USDT, mSOL, stSOL, Bonk, RIFTS
JUPITER_ALLOWED_MINTS="So11111111111111111111111111111111111111112,EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v,Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB,mSoLzYCxHdYgdzU16g5QSh3i5K3z3KZK7ytfqcJm7So,7dHbWXmci3dT8UFYWYZweBLXgycu7Y3iL6trKn1Y7ARj,DezXAZ8z7PnrnRJjz3wXBoRgixCa6xjnB7YaB1pPB263,your_rifts_token_mint"

# Background Workers
INIT_WORKERS=true

# Debug Options
DEBUG_RPC=false
NEXT_PUBLIC_DEBUG_RPC_STACK=false

# Cron job authentication secret (generate with: openssl rand -hex 32)
CRON_SECRET=your_cron_secret_hex_64_chars
